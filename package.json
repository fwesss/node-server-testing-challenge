{
  "name": "node-server-testing",
  "version": "1.0.0",
  "description": "Node Server Testing Challenge",
  "keywords": [],
  "homepage": "https://github.com/LambdaSchool/node-server-testing#readme",
  "bugs": {
    "url": "https://github.com/LambdaSchool/node-server-testing/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LambdaSchool/node-server-testing.git"
  },
  "license": "ISC",
  "author": "",
  "main": "./build/index",
  "typings": "./build/index",
  "scripts": {
    "check-format": "yarn run prettier --ignore-path .gitignore --list-different",
    "check-types": "tsc --watch",
    "format": "yarn run prettier --ignore-path .gitignore --write",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "migrate:latest": "npx knex migrate:latest",
    "migrate:rollback": "npx knex migrate:rollback",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(json|js|ts)\"",
    "seed:run": "npx knex seed:run",
    "server": "tsc && nodemon ./build/index.js",
    "test": "jest --watch",
    "validate": "npm-run-all --parallel check-format lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts)": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "bcrypt": "^3.0.8",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "folktale": "^2.3.2",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.10",
    "knex-cleaner": "^1.3.0",
    "morgan": "^1.9.1",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-optimize-regex": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "sort-package-json": "^1.40.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  }
}
